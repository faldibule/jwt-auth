<div class="container">
    <div class="forms-container">
      <div class="signin-signup">
        <form action="/auth/login" method="post" class="sign-in-form">
          <h2 class="title">Sign in</h2>
          <% if (loginError) { %>
            <div style="color: #dc3545;"><%= loginError %></div>
            <% } %>
            <% if (regisSuccess) { %>
            <div style="color: #198754;"><%= regisSuccess %></div>
            <% } %>
            <% if (typeof errors != 'undefined') { %>
              <div style="color: #dc3545;">
                  <p align='center'>Terdapat Kesalahan Dalam Registrasi!</p>
              </div>
              <% } %>
          <div class="input-field">
            <i class="fas fa-user"></i>
            <input type="email" name="email" placeholder="Email" />
          </div>
          <div class="input-field">
            <i class="fas fa-lock"></i>
            <input type="password" placeholder="Password" name="password" />
          </div>
          <input type="submit" value="Login" class="btn solid" />
          <p class="social-text">Auth Template by True Coder</p>
        </form>
        <form action="/auth/register" method="post" class="sign-up-form">
          <h2 class="title">Sign up</h2>
          <% if (typeof errors != 'undefined') { %>
            <div style="color: #dc3545;">
                <ul>
                    <% errors.forEach(err => { %>
                    <li><%= err.msg %> </li>
                    <% }) %>
                </ul>
            </div>
            <% } %>
          <div class="input-field">
            <i class="fas fa-user"></i>
            <input type="text" placeholder="Nama" name="nama" value="<%= old.nama || '' %>" required />
          </div>
          <div class="input-field">
            <i class="fas fa-envelope"></i>
            <input type="email" placeholder="Email" name="email" value="<%= old.email || '' %>" required />
          </div>
          <div class="input-field">
            <i class="fas fa-lock"></i>
            <input type="password" placeholder="Password" name="password" value="<%= old.password || '' %>" required />
          </div>
          <div class="input-field">
            <i class="fas fa-lock"></i>
            <input type="password" placeholder="Repeat Password" name="r_password" value="<%= old.r_password || '' %>"required />
          </div>
          <input type="submit" class="btn" value="Sign up" />
          <p class="social-text">Auth Template by True Coder</p>
        </form>
      </div>
    </div>

    <div class="panels-container">
      <div class="panel left-panel">
        <div class="content">
          <h3>New here and don't have an account ?</h3>
          <p>
            Just Register by click the button bellow or klik <a style="color: white" href="/post">here</a> to see all Post
          </p>
          <button class="btn transparent" id="sign-up-btn">
            Sign up
          </button>
        </div>
        <img src="/auth/log.svg" class="image" alt="" />
      </div>
      <div class="panel right-panel">
        <div class="content">
          <h3>One of us ?</h3>
          <p>
            Just Login by click the button bellow or klik <a style="color: white" href="/post">here</a> to see all Post
          </p>
          <button class="btn transparent" id="sign-in-btn">
            Sign in
          </button>
        </div>
        <img src="/auth/register.svg" class="image" alt="" />
      </div>
    </div>
  </div>